{
  "name": "barbearia-app",
  "version": "1.0.0",
  "description": "Sistema completo de gerenciamento para barbearias",
  "private": true,
  "scripts": {
    "install:all": "npm run install:backend && npm run install:admin && npm run install:customer",
    "install:backend": "cd backend && npm install",
    "install:admin": "cd admin-panel && npm install", 
    "install:customer": "cd customer-app && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-panel && npm run dev",
    "dev:customer": "cd customer-app && npm run dev",
    "build:admin": "cd admin-panel && npm run build",
    "build:customer": "cd customer-app && npm run build",
    "start:backend": "cd backend && npm start"
  },
  "keywords": [
    "barbearia",
    "agendamento",
    "vue",
    "quasar",
    "pwa",
    "nodejs",
    "typescript"
  ],
  "author": "Guilherme Guth <guilhermeguthz@gmail.com>",
  "license": "MIT"
}
